
{% set navigation = craft.entries.section('navigation').all() %}

{% set headerClasses = ['main-header', 'main-header--' ~ headerColor, 'py-2'] %}

{% if extensionClasses|default %}
    {% set headerClasses = headerClasses|merge(extensionClasses) %}
{% endif %}

<header class="{{ headerClasses|join(' ') }}" data-toggler data-toggler-observe="[data-toggle-nav]" data-toggler-class="is-nav-open">
    <div class="container d-flex align-items-center justify-content-between">
        <div class="main-header__logo logo">
            <a class="logo__link" href="{{ siteUrl }}" title="Parallel Realities">
                <h2 class="logo__title text-uppercase">Parallel</h2>
            </a>
        </div>
        <div class="main-header__nav-toggle d-lg-none">
            <button class="btn btn-link px-0" data-toggle-nav>
                <div class="icon icon--hamburger">
                    <div class="icon__top"></div>
                    <div class="icon__middle"></div>
                    <div class="icon__bottom"></div>
                </div>
            </button>
        </div>
        <nav class="main-header__nav">
            <ul class="nav nav--primary flex-nowrap">
                {% nav item in navigation %}
                    {% set href = item.navigationLink is not empty ? item.navigationLink[0].url : item.externalLink %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ href }}" title="{{ item.title }}" target="{{ item.externalLink ? "_blank" : "_self"}}">
                            <span class="nav-text">{{ item.title }}</span>
                        </a>
                    </li>
                {% endnav %}
            </ul>
        </nav>
    </div>
</header>
<div class="main-header-observer"></div>
