<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col">
            <h2>{{ footer.companyName }}</h2>
        </div>
    </div>
    <div class="row justify-content-center text-center">
        <div class="col">
            {{ footer.companyAddress|raw }}
        </div>
    </div>
    <div class="row justify-content-center text-center m-4">
        <div class="col-12 mb-2">
            <a class="text-regular" href="tel:{{ footer.companyPhone }}" title="{{ footer.companyName }} | Phone Number">
                <svg class="icon icon--20 mr-1">
                    <use xlink:href="{{ siteUrl }}app/assets/img/symbols.svg#phone"></use>
                </svg>
                {{ footer.companyPhone }}
            </a>
        </div>
        <div class="col-12">
            <a class="text-regular" href="mailto:{{ footer.companyEmail }}" title="{{ footer.companyName }} | Email">
                <svg class="icon icon--20 mr-1">
                    <use xlink:href="{{ siteUrl }}app/assets/img/symbols.svg#mail"></use>
                </svg>{{ footer.companyEmail }}
            </a>
        </div>
    </div>
    <div class="row justify-content-center text-center m-4">
        {% for block in footer.socialMedia.all() %}
            <div class="col-1">
                {% include '_elements/footer/social-media.twig' %}
            </div>
        {% endfor %}
    </div>
    <div class="row justify-content-center text-center m-4">
        <div class="col">
            {{ footer.customText|raw }}
        </div>
    </div>
    <div class="row justify-content-center text-center">
        <div class="col">
            <p class="text-smaller text-muted">
                <a href="{{ footer.termsConditions }}" target="_blank"
                   title="{{ footer.companyName }} | Terms and Conditions">Download
                </a>
                our general terms and conditions (Dutch, 2018)
            </p>
        </div>
    </div>
</div>